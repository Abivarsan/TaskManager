<!-- Views/UserTasks/Delete.cshtml -->
@model TaskManager.Models.UserTask

@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Are you sure you want to delete this task?</h4>
            <p><strong>@Model.Title</strong></p>
            <hr />
            <p>@Model.Description</p>
        </div>
        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="UserTaskId" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>
