<!-- Views/UserTasks/Index.cshtml -->
@model IEnumerable<TaskManager.Models.UserTask>

@{
    ViewData["Title"] = "My Tasks";
}

<h1>My Tasks</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Task</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You have no tasks. Start by creating one!
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col" style="width: 25%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <div class="d-flex">
                                <a asp-action="Edit" asp-route-id="@item.UserTaskId" class="btn btn-sm btn-warning me-2">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.UserTaskId" class="btn btn-sm btn-info me-2">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.UserTaskId" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
