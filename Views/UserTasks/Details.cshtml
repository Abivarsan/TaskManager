<!-- Views/UserTasks/Details.cshtml -->
@model TaskManager.Models.UserTask

@{
    ViewData["Title"] = "Task Details";
}

<h1>Task Details</h1>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
        </dl>
        <div class="d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.UserTaskId" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
